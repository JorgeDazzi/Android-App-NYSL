<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/build"
    android:backgroundTintMode="src_atop"
    android:padding="14dp">

    <ImageView
        android:id="@+id/headerIconLogout"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/accountImg"
        android:layout_marginEnd="23dp"
        android:src="@drawable/ic_exit_to_app_black_24dp" />

    <ImageView
        android:id="@+id/accountImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/userDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userEmail"
        android:layout_alignStart="@+id/accountImg"
        android:layout_marginBottom="-115dp"
        android:text="User Name"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/accountImg"
        android:layout_marginTop="115dp"
        android:text="username@email.com"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/headerLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/headerIconLogout"
        android:layout_marginEnd="40dp"
        android:text="Logout"
        android:textColor="#fff" />


</RelativeLayout>