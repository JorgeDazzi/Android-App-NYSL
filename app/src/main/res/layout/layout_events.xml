<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/parent_layout"
    android:background="@drawable/events_bg"
    android:elevation="10dp"
    android:layout_margin="8dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/divider"
        android:layout_marginStart="12dp"
        android:src="@mipmap/ic_launcher" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visitor_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/home_img"
        android:layout_marginTop="35dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/home_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/visitor_txt"
        android:layout_alignTop="@+id/visitor_img"
        android:text="home team"
        android:textSize="16sp"
        android:textColor="@color/font_green"
        />

    <TextView
        android:id="@+id/visitor_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/home_img"
        android:layout_marginStart="59dp"
        android:text="visitor team"
        android:textSize="16sp"
        android:textColor="@color/font_green"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="106dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/gameTime"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/divider"
        android:layout_alignStart="@+id/divider"
        android:layout_marginStart="8dp"
        android:text="9h30"
        android:textAlignment="center"
        android:textColor="@color/font_green"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/gameMap"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/home_img"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="37dp"
        android:background="@drawable/icon_map_events" />

</RelativeLayout>